<!DOCTYPE html>
<html>
  <head>
    <title>EndingNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
		<% if notice %>
  		<p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
  		<p class="alert alert-danger"><%= alert %></p>
		<% end %>

		<ul class="nav justify-content-center">
			<li class="nav-item">
			<%= link_to "Home", root_path, :class => 'nav-link', data: { turbolinks: false } %>
			</li>
			<% if user_signed_in? %>
			<li class="nav-item">
  			<%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link' %>
			</li>
			<li class="nav-item">
				<%= link_to "Game", game_path, :class => 'nav-link', data: { turbolinks: false }  %>
			</li>
			<li class="nav-item">
  			<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link'  %>
			</li>
			<% else %>
			<li class="nav-item">
  			<%= link_to "Sign up", new_user_registration_path, :class => 'nav-link'  %>
			</li>
			<li class="nav-item">
  			<%= link_to "Login", new_user_session_path, :class => 'nav-link'  %>
			</li>
			<% end %>
			<% if user_signed_in? %>
				<p class="user-info">Logged in as <strong><%= current_user.username %></strong> with a highscore of <strong><%= current_user.highscore %></strong>.
				</p>
			<% end %>
		</ul>
    <%= yield %>
  </body>
</html>
